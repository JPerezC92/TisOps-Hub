{
  "name": "reports-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "nest start --watch --env-file .env",
    "build": "nest build",
    "start": "nest start --env-file .env",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "db:push": "dotenv -e .env -- drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -e .env -- drizzle-kit migrate",
    "db:studio": "dotenv -e .env -- drizzle-kit studio",
    "db:reset": "dotenv -e .env -- node reset-db.js"
  },
  "dependencies": {
    "@libsql/client": "0.15.15",
    "@nestjs/common": "11.0.0",
    "@nestjs/core": "11.0.0",
    "@nestjs/platform-express": "11.0.0",
    "@nestjs/swagger": "11.2.1",
    "@repo/database": "workspace:*",
    "@repo/reports": "workspace:*",
    "drizzle-orm": "0.44.7",
    "nestjs-zod": "5.0.1",
    "reflect-metadata": "0.2.0",
    "rxjs": "7.8.1",
    "xlsx": "0.18.5",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@nestjs/cli": "11.0.0",
    "@nestjs/schematics": "11.0.0",
    "@nestjs/testing": "11.0.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/express": "4.17.17",
    "@types/node": "24.9.2",
    "@types/supertest": "6.0.0",
    "dotenv-cli": "11.0.0",
    "drizzle-kit": "0.31.6",
    "jest": "29.7.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.2"
  }
}
