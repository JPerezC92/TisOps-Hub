{
  "name": "tisops-hub",
  "version": "0.0.0",
  "private": true,
  "description": "TisOps Hub - Operations Management Platform",
  "author": "philip",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "pnpm --filter=reports-api db:generate",
    "db:migrate": "pnpm --filter=reports-api db:migrate",
    "db:push": "pnpm --filter=reports-api db:push",
    "db:studio": "pnpm --filter=reports-api db:studio",
    "db:reset": "pnpm --filter=reports-api db:reset"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "3.6.2",
    "turbo": "2.5.8"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=20"
  }
}
